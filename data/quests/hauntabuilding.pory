movement HauntABuilding_WalkToPair_Movement
{
    walk_up * 2
        walk_right * 2
        step_end
}
movement HauntABuilding_Flee_Movement
{
    walk_faster_down * 3
        step_end
}
movement HauntABuilding_LeaveHouse_Movement
{
    walk_left * 3
        walk_down * 3
        face_up
        delay_16
        step_end
}

movement HauntABuilding_ApproachPlayer_Movement
{
    walk_right * 2
    face_up
    step_end
}
