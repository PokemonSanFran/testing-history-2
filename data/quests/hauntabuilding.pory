script Quest_HauntABuilding_HideObject_Script
{
    setflag(FLAG_TEMP_1)
        setflag(FLAG_TEMP_3)

        removeobject(3)
        removeobject(4)
        removeobject(5)
        removeobject(6)
        removeobject(7)
        removeobject(8)

        questmenu(QUEST_MENU_CHECK_COMPLETE, QUEST_HAUNTABUILDING)

        if (var(VAR_RESULT))
        {
            setflag(FLAG_TEMP_2)
        }
}
script Quest_HauntABuilding_Interact_Script
