        closemessage
        applymovement(BIANCA,Quest_Sieboldstraining_WalkToRobots)
        fadescreen(FADE_TO_BLACK)
        startquest(QUEST_SIEBOLDSTRAINING)
        call(EnterTheMaster_RepositionBianca_Script)
        fadescreen(FADE_FROM_BLACK)
        end
}

