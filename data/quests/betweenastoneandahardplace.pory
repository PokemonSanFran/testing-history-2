script Quest_BetweenAStoneAndAHardPlace_Event_Script{
    returnqueststate(QUEST_BETWEENASTONEANDAHARD)

    switch(var(VAR_RESULT)){
        case 1: goto(Tenderloin_TrolleyHQ_CounterWorker_Dialogue)
        case 2: goto(Quest_BetweenAStoneAndAHardPlace_Active_Dialogue)
        case 3: goto(Quest_BetweenAStoneAndAHardPlace_Reward_Dialogue)
        case 4: goto(Quest_BetweenAStoneAndAHardPlace_Complete_Dialogue)
    }
}

script Quest_BetweenAStoneAndAHardPlace_Active_Dialogue{
    msgbox(gText_Quest_BetweenAStoneAndAHardPlace_DidYouHear,MSGBOX_NPC)
    buffernumberstring(STR_VAR_1,GAME_STAT_TROLLEY_RIDES)

    switch(var(GAME_STAT_TROLLEY_RIDES)){
        case 0: 
            msgbox(gText_Quest_BetweenAStoneAndAHardPlace_YouShouldTry,MSGBOX_NPC)
        case 1: 
        case 2:
        case 3: 
            msgbox(gText_Quest_BetweenAStoneAndAHardPlace_AreYouNew,MSGBOX_NPC)
        case 4:
        case 5:
        case 6:
            msgbox(gText_Quest_BetweenAStoneAndAHardPlace_YoureARegular,MSGBOX_NPC)
        case 7:
        case 8:
        case 9:
            msgbox(gText_Quest_BetweenAStoneAndAHardPlace_OhWowOnly,MSGBOX_NPC)
    }
    end
}

script Quest_BetweenAStoneAndAHardPlace_Reward_Dialogue{
    buffernumberstring(STR_VAR_1,GAME_STAT_TROLLEY_RIDES)
    msgbox(gText_Quest_BetweenAStoneAndAHardPlace_GladToSeeYoureEnjoying,MSGBOX_NPC)
    msgbox(gText_Quest_BetweenAStoneAndAHardPlace_ForYourContinuedRidership,MSGBOX_NPC)

    random(10)
    switch(var(VAR_RESULT)){
        case 0: giveitem(ITEM_ICE_STONE)
        case 1: giveitem(ITEM_FIRE_STONE)
        case 2: giveitem(ITEM_WATER_STONE)
        case 3: giveitem(ITEM_THUNDER_STONE)
        case 4: giveitem(ITEM_LEAF_STONE)
        case 5: giveitem(ITEM_MOON_STONE)
        case 6: giveitem(ITEM_SUN_STONE)
        case 7: giveitem(ITEM_SHINY_STONE)
        case 8: giveitem(ITEM_DUSK_STONE)
        case 9: giveitem(ITEM_DAWN_STONE)
    }

    msgbox(gText_Quest_BetweenAStoneAndAHardPlace_AhhPleaseDont,MSGBOX_NPC)
    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_Quest_BetweenAStoneAndAHardPlace_Yeah,MSGBOX_NPC)
    callnative(ClearMugshot)

}

