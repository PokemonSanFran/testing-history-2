script Quest_BuildingScope_MoveEmployee_Script{
    returnqueststate(QUEST_BUILDINGSCOPE)

    if (var(VAR_RESULT) > QUEST_MENU_UNLOCK_QUEST){
    setobjectxy(EMPLOYEE,5,1)
    setobjectxyperm(EMPLOYEE,5,1)
    }
}

script Quest_BuildingScope_ToggleObjects_Script{
    returnqueststate(QUEST_BUILDINGSCOPE)

    switch (var(VAR_RESULT)){
        case QUEST_MENU_SET_REWARD:
            call(Quest_BuildingScope_HideConstruction_Script)
        case QUEST_MENU_COMPLETE_QUEST: 
            call(Quest_BuildingScope_HideSquatters_Script)
        default:
            call(Quest_BuildingScope_HideSquatters_Script)
            call(Quest_BuildingScope_HideConstruction_Script)
    }
    return
}

script Quest_BuildingScope_HideSquatters_Script{
    setflag(FLAG_HIDE_SQUATTERS)
    return
}

script Quest_BuildingScope_HideConstruction_Script{
    setflag(FLAG_HIDE_CONSTRUCTION)
    return
}

script Quest_BuildingScope_Event_Script{
    lock

    returnqueststate(QUEST_BUILDINGSCOPE)

    switch(var(VAR_RESULT)){
        case QUEST_MENU_SET_ACTIVE:
            faceplayer
            goto(Quest_BuildingScope_Employee_Active_Dialogue)
        case QUEST_MENU_SET_REWARD: 
            faceplayer
            goto(Quest_BuildingScope_Reward_Dialogue)
        case QUEST_MENU_COMPLETE_QUEST:
            faceplayer
            goto(Quest_BuildingScope_CheckNoGoodDeed_Script)
        default: goto(Quest_BuildingScope_CheckBadges_Script)
    }
}

script Quest_BuildingScope_CheckBadges_Script{
   special(GetNumberOfBadges)

   if (var(VAR_RESULT) < 5){
      goto(Quest_BuildingScope_ScaredEmployee_Dialogue) 
   }else{
       goto(Quest_BuildingScope_StartQuest_Dialogue)
   }
}

script Quest_BuildingScope_ScaredEmployee_Dialogue{
    msgbox(gText_BuildingScope_HowBadCouldItBe)
    release
    end
}

script Quest_BuildingScope_StartQuest_Dialogue{
    faceplayer
    msgbox(gText_BuildingScope_OhYourePlayer)
    msgbox(gText_BuildingScope_TheresABuildingIn)
    msgbox(gText_BuildingScope_AnimalsOrPokemon)
    closemessage

    applymovement(EMPLOYEE,Common_Movement_WalkDown)
    waitmovement(EMPLOYEE)

    startquest(QUEST_BUILDINGSCOPE)
    release
    end
}

script Quest_BuildingScope_Employee_Active_Dialogue{
    msgbox(format("Yeah, I will go to your Gym Soon!."),MSGBOX_NPC, SPEAKER_GRUNT, TAIL_TALK, EMOTE_HAPPY, FALSE)
    msgbox(format("I see, I may be a little busy with the lighthouse but I see you there."),MSGBOX_NPC, SPEAKER_JASMINE, TAIL_TALK, EMOTE_SWEAT, TRUE)
    msgbox(format("Hey, please stop eavesdropping, I'm on the phone right now."),MSGBOX_NPC, SPEAKER_GRUNT, TAIL_WHISPER, EMOTE_ANGRY, FALSE)
    //msgbox(gText_BuildingScope_OneDayIll,MSGBOX_NPC)
    end
}

script Quest_BuildingScope_Squatters_Cutscene{
    lock

    questmenu(QUEST_MENU_CHECK_ACTIVE,QUEST_BUILDINGSCOPE)

    if (!var(VAR_RESULT)){
        release
        end
    }

    applymovement(PLAYER,Common_Movement_FaceUp)

    addobject(SQUATTER_A)
    addobject(SQUATTER_B)
    addobject(SQUATTER_C)

    applymovement(SQUATTER_A,Quest_BuildingScope_WalkToPlayer_Movement)
    applymovement(SQUATTER_B,Quest_BuildingScope_WalkToPlayer_Movement)
    applymovement(SQUATTER_C,Quest_BuildingScope_WalkToPlayer_Movement)
    waitmovement(SQUATTER_C)
    goto(Quest_BuildingScope_BattleSquatters_Script)
}

script Quest_BuildingScope_BattleSquatters_Script{
    msgbox(gText_BuildingScope_FinallyHadTheBalls)
    trainerbattle_no_intro(TRAINER_LOLA_1,gText_BuildingScope_WhyWontYou)
    msgbox(gText_BuildingScope_ThrowingGasAtUs)
    trainerbattle_no_intro(TRAINER_LOLA_2,gText_BuildingScope_YouDisgustMe)
    msgbox(gText_BuildingSCope_NothingIsEverGood)
    trainerbattle_no_intro(TRAINER_LOLA_3,gText_BuildingScope_Scum)
    goto(Quest_BuildingScope_PostBattle_Dialogue)
}

script Quest_BuildingScope_PostBattle_Dialogue{
    lock
    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_BuildingScope_NobodyIsTryingTo)
    callnative(ClearMugshot)

    msgbox(gText_BuildingScope_ThrowingShitAt)

    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_BuildingScope_SomebodyAskedMe)
    callnative(ClearMugshot)

    msgbox(gText_BuildingScope_UhHuhPokemon)

    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_BuildingScope_LookTheGuyIWas)
    callnative(ClearMugshot)

    msgbox(gText_BuildingScope_NotLikeWeGotAnywhere)
    closemessage

    questmenu(QUEST_MENU_SET_REWARD,QUEST_BUILDINGSCOPE)
    release
    end
}

script Quest_BuildingScope_Reward_Dialogue{
    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_BuildingScope_IGotInto)
    callnative(ClearMugshot)

    msgbox(gText_BuildingScope_WaitPeopleWere)

    setvar(VAR_MUGSHOT,MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_BuildingScope_YeahTheyWere)
    callnative(ClearMugshot)

    msgbox(gText_BuildingScope_OhWowWell)
    msgbox(gText_BuildingScope_IllSendSomebody)

	showmoneybox(0, 0)
    waitbuttonpress
    addmoney(50000)
    playse(SE_SHOP)
    updatemoneybox(0)
    waitse
    waitbuttonpress
    hidemoneybox
    closemessage
    
    completequest(QUEST_BUILDINGSCOPE)
    release
    end
}

script Quest_BuildingScope_PostQuest_Dialogue{
    msgbox(gText_BuildingScope_WeHired,MSGBOX_NPC)
    end
}

script Quest_NoGoodDeed_FollowUp_Dialogue{
    return
}

script Quest_BuildingScope_CheckNoGoodDeed_Script{
    questmenu(QUEST_MENU_CHECK_ACTIVE,QUEST_NOGOODDEED)

    if (!var(VAR_RESULT)){
        goto(Quest_BuildingScope_PostQuest_Dialogue)
    }else {
        goto(Quest_NoGoodDeed_FollowUp_Dialogue)
    }
}
