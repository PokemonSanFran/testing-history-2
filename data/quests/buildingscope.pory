const PLAYER = OBJ_EVENT_ID_PLAYER
const FLAG_HIDE_SQUATTERS = FLAG_TEMP_1
const FLAG_HIDE_CONSTRUCTION = FLAG_TEMP_2
const EMPLOYEE = 5

const SQUATTER_A = 1
const SQUATTER_B = 3
const SQUATTER_C = 4

//Quest_BuildingScope_
