    addvar(VAR_DANCEBATTLE_STATE,4)
    removemoney(2000,0)
    updatemoneybox(0)
    hidemoneybox
    msgbox(gText_Dancebattle_WhoaThankYouFor)
    call(Quest_Dancebattle_CapState_Script)
