    addvar(VAR_DANCEBATTLE_STATE,2)
    removemoney(1000,0)
    updatemoneybox(0)
    hidemoneybox
    msgbox(gText_Dancebattle_WowThankYouFor)
    call(Quest_Dancebattle_CapState_Script)
    return 
}

