script EnterPsfgoodadmin_CleanUp {
    setobjectxyperm(PERSON1,2,40)
    setobjectxyperm(PERSON2,2,41)
    setobjectxyperm(PERSON3,2,42)
}

script EnterPsfgoodadmin_Event_Script {

    checkitem(ITEM_MEGA_RING,1)

