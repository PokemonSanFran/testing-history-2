mapscripts Psfcity12_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
    checkitem(ITEM_MEGA_RING,1)

        if (var(VAR_RESULT)) {
            call(EnterPsfgoodadmin_CleanUp)
        }
