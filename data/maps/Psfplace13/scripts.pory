const PLAYER = OBJ_EVENT_ID_PLAYER
const GRUNT1 = 1 
const GRUNT2 = 2 
const GRUNT3 = 3 
const GRUNT4 = 4 
const GRUNT5 = 5 
const GRUNT6 = 6
const DAVID = 7

mapscripts Psfplace13_MapScripts {
    MAP_SCRIPT_ON_FRAME_TABLE [
    //    VAR_PSFGOODTEAM_PSFPLACE13_STATE, 0: GroupOfAssholesAppears_ResumeFromSave
    ]
}

script GroupOfAssholesAppears_CheckPartySize {
    special(HasEnoughMonsForDoubleBattle)

        if (var(VAR_RESULT) == PLAYER_HAS_TWO_USABLE_MONS){
            goto(GroupOfAssholesAppears_GroupAssault_Dialogue)
        }else {
            goto(GroupOfAssholesAppears_MovePlayerAway_Script)
        }
}

script GroupOfAssholesAppears_MovePlayerAway_Script {
        lockall
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_GroupOfAssholesAppears_IThinkINeedMore)
        callnative(ClearMugshot)
        closemessage
        call(GroupOfAssholesAppears_DecidePlayerMovement_NotEnoughMons_Script)
        releaseall
        end
}

script GroupOfAssholesAppears_DecidePlayerMovement_NotEnoughMons_Script {
    getplayerxy(VAR_TEMP_1,VAR_TEMP_2)
        switch(var(VAR_TEMP_1)) {
            case 36: applymovement(PLAYER,Common_Movement_WalkRight)
            default: applymovement(PLAYER,Common_Movement_WalkDown)
        }
    waitmovement(0) 
}

script GroupOfAssholesAppears_GroupAssault_Dialogue {
    lockall
        playbgm(MUS_RG_ENCOUNTER_ROCKET,FALSE)
        applymovement(GRUNT1,Common_Movement_WalkInPlaceRight)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_YouShouldBeAshamed)
        applymovement(GRUNT2,Common_Movement_WalkInPlaceUp)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_HaventYouDoneEnough)
        applymovement(GRUNT3,Common_Movement_WalkInPlaceUp)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_GiveJelenaBack)
        applymovement(DAVID,GroupOfAssholesAppears_LookAround_Movement)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_IDontKnowWho)
        applymovement(GRUNT4,Common_Movement_WalkInPlaceUp)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_WeDontWantToHear)
        applymovement(DAVID,Common_Movement_FaceLeft)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_RuinLives)
        applymovement(GRUNT5,Common_Movement_WalkInPlaceUp)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_NotIfWeHave)
        call(GroupOfAssholesAppears_PlayerToDavid_Script)
        goto(GroupOfAssholesAppears_Psfchara1Intervene_Dialogue)
}
script GroupOfAssholesAppears_PlayerToDavid_Script {
    playse(SE_PIN)
        applymovement(PLAYER,Common_Movement_ExclamationMark)
        waitmovement(0)
        getplayerxy(VAR_TEMP_1,VAR_TEMP_2)

        switch(var(VAR_TEMP_1)) {
            case 36: applymovement(PLAYER,GroupOfAssholesAppears_WalkFromEast_Movement)
            default: applymovement(PLAYER,GroupOfAssholesAppears_WalkFromWest_Movement)
        }
    waitmovement(0) 
}

script GroupOfAssholesAppears_Psfchara1Intervene_Dialogue {
    setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_GroupOfAssholesAppears_WhatTheHell)
        callnative(ClearMugshot)
        closemessage
        applymovement(GRUNT2,Common_Movement_FaceRight)
        applymovement(GRUNT3,Common_Movement_FaceRight)
        applymovement(GRUNT5,Common_Movement_FaceLeft)
        applymovement(GRUNT4,Common_Movement_FaceLeft)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_NothingWrongWith)
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_GroupOfAssholesAppears_ThisIsntAProtest)
        callnative(ClearMugshot)
        applymovement(DAVID,Common_Movement_FaceDown)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_OhThankGod)
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        applymovement(PLAYER,GroupOfAssholesAppears_LookAround_Movement)
        waitmovement(0)
        msgbox(gText_GroupOfAssholesAppears_HeMightBeAsking)
        callnative(ClearMugshot)
        setvar(VAR_PSFGOODTEAM_PSFPLACE13_STATE,1)
        call(Common_EventScript_SaveGame)
        closemessage
        goto(GroupOfAssholes_StartBattle_Script)
}

script GroupOfAssholes_StartBattle_Script {
        lockall
        applymovement(DAVID,Common_Movement_FaceDown)
        waitmovement(0)
        applymovement(PLAYER,Common_Movement_FaceRight) //TODO figure out why I can't control the direction the player faces here
        waitmovement(0)
        trainerbattle_double(TRAINER_IHSAN_AND_EMMITT,gText_GroupOfAssholesAppears_WhoTheHellYouThink,gText_GroupOfAssholesAppears_WoahWhoDidWePick,gText_GroupOfAssholesAppears_NotEnoughMons,GroupOfAssholesAppears_GroupLeaves_Dialogue,NO_MUSIC)
        closemessage
}

script GroupOfAssholesAppears_GroupLeaves_Dialogue {
        lockall
        setvar(VAR_PSFGOODTEAM_PSFPLACE13_STATE,2)
        setvar(VAR_PSFPLACE13_STATE,1)
        msgbox(gText_GroupOfAssholesAppears_PfftLooksLikeTheLeagueSent)
        msgbox(gText_GroupOfAssholesAppears_YouBothMakeMeSick)
        closemessage
        applymovement(GRUNT1,GroupOfAssholesAppears_LeavePsfplace13_Slot1_Movement)
        applymovement(GRUNT2,GroupOfAssholesAppears_LeavePsfplace13_Slot2_Movement)
        applymovement(GRUNT3,GroupOfAssholesAppears_LeavePsfplace13_Slot3_Movement)
        applymovement(GRUNT4,GroupOfAssholesAppears_LeavePsfplace13_Slot4_Movement)
        applymovement(GRUNT5,GroupOfAssholesAppears_LeavePsfplace13_Slot5_Movement)
        applymovement(GRUNT6,GroupOfAssholesAppears_LeavePsfplace13_Slot6_Movement)
        waitmovement(0)
        removeobject(GRUNT1)
        removeobject(GRUNT2)
        removeobject(GRUNT3)
        removeobject(GRUNT4)
        removeobject(GRUNT5)
        removeobject(GRUNT6)
        fadedefaultbgm
        msgbox(gText_GroupOfAssholesAppears_DontComeBackAssholes)
        goto(GroupOfAssholesAppears_ExplainTeam_Dialogue)
}

