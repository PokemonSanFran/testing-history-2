mapscripts Psfplace13_MapScripts {
    MAP_SCRIPT_ON_FRAME_TABLE [
    ]
}

script Psfplace13_InteractFerryAttendant_Script {
    lock
    checkitem(ITEM_MYSTIC_TICKET,1)

    if (!var(VAR_RESULT)){
        msgbox(gText_PreventPlayerFerry_ImSorryYou,MSGBOX_NPC)
        release
        end
    }else{
        goto(Psfplace13_ChooseFerryDestination_Script)
    }
}

script Psfplace13_ChooseFerryDestination_Script {
    msgbox(gText_WhereWould,MSGBOX_NPC)
    goto(Psfplace13_UnlockedDestinations_Script)
}

script Psfplace13_UnlockedDestinations_Script {
    switch (var(VAR_FERRY_STATE)){
        default:goto(Psfplace13_FerryState0_Script)
    }
}

script Psfplace13_FerryState0_Script {
    multichoicedefault(18,8,PSFPLACE13_FERRY_DESTINATIONS_VER1,0,FALSE)
    call(SlateportCity_Harbor_EventScript_BoardFerry)

    switch (var(VAR_RESULT)){
        case 0: warp(MAP_PSFCAVE7,15,22)
        case 1: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
        case MULTI_B_PRESSED: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
}
}


text gText_PreventPlayerFerry_ImSorryYou {
    format("I'm sorry, you don't appear to have the correct ticket to board the Ferry to Psfcave7.")
}
