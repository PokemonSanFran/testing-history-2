script GroupOfAssholesAppears_GiveRewards_Dialogue {
    msgbox(gText_GroupOfAssholesAppears_YoullHaveToCome)
        giveitem(ITEM_MACH_BIKE)
        msgbox(gText_GroupOfAssholesAppears_IfYouPutThatOn)
        closemessage
        addvar(VAR_STORYLINE_STATE,1)
        call(Act1_1_Check_Script)
        releaseall
        end
}

script GroupOfAssholesAppears_LookForXanax_Dialogue {
        lockall
        applymovement(DAVID,GroupOfAssholesAppears_LookAround_Movement)
        
        if (var(VAR_PSFGOODTEAM_PSFPLACE13_STATE) == 1)   {
            msgbox(gText_GroupOfAssholesAppears_Cries)
        }else{
            msgbox(gText_GroupOfAssholesAppears_WhereDidIPut)
        }
        closemessage
        releaseall
        end
}

movement GroupOfAssholesAppears_LookAround_Movement {
    face_left
        delay_16
        face_right
        delay_16
        step_end
}

movement GroupOfAssholesAppears_WalkFromEast_Movement {
    walk_left * 2
        walk_down * 2
        walk_left * 3
        walk_up
        step_end
}

movement GroupOfAssholesAppears_WalkFromWest_Movement {
    walk_up
        walk_right * 5
        walk_up * 1
        step_end
}

movement GroupOfAssholesAppears_LeavePsfplace13_Slot1_Movement {
    walk_down * 2
        walk_left * 3
        walk_down * 3
        walk_left * 3
        step_end
}
