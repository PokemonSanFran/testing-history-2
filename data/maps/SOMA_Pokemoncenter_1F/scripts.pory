const LOCALID_NURSE = 1

mapscripts SOMA_Pokemoncenter_1F_MapScripts{
    MAP_SCRIPT_ON_RESUME: CableClub_OnResume
    MAP_SCRIPT_ON_TRANSITION{
        setrespawn(HEAL_LOCATION_SOMA)
        end
    }
    MAP_SCRIPT_ON_LOAD{
        call(Quest_Restaurantexpansion_SOMA_HangPosterTile_Script)
    }
}

script SOMA_Pokemoncenter_1F_EventScript_Nurse{
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
    call(Quest_Restaurantexpansion_Nurse_Question_Script)
	release
	end
}

script SOMA_Pokemoncenter_1F_EventScript_Clerk{
    lock
    faceplayer
    message(gText_HowMayIServeYou)
    waitmessage
    pokemart(OldaleTown_Mart_Pokemart_Basic)
    call(Quest_Bodegaburnout_CheckSubquestState_Script)
    msgbox(gText_PleaseComeAgain)
    release
    end
}
