const PLAYER = OBJ_EVENT_ID_PLAYER

mapscripts Psfplace11_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        goto(Psfplace11_MapScripts_OnTransition)
    }

    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_ROUTE117_STATE, 1: SurvivalChance333_MovePlayerIntoPosition
        VAR_ROUTE117_STATE, 2: SurvivalChance333_ExplainPlan
    ]
}

script Psfplace11_MapScripts_OnTransition {
    switch (var(VAR_ROUTE117_STATE)){
        case 0: goto(SurvivalChance333_HideObject_Script)
        case 1: goto(SurvivalChance333_ObjectSetUp_Script)
}
}

script Psfplace11_ChooseFerryDestination_Script {
    msgbox(gText_WhereWould,MSGBOX_NPC)
    goto(Psfplace11_UnlockedDestinations_Script)
}

script Psfplace11_UnlockedDestinations_Script {
    switch (var(VAR_FERRY_STATE)){
        case 0:goto(Psfplace11_FerryState0_Script)
        case 1:goto(Psfplace11_FerryState0_Script)
        case 2:goto(Psfplace11_FerryState1_Script)
    }
}

script Psfplace11_FerryState0_Script {
    multichoicedefault(18,8,PSFPLACE11_FERRY_DESTINATIONS_VER1,2,FALSE)
    call(SlateportCity_Harbor_EventScript_BoardFerry)

    switch (var(VAR_RESULT)){
        case 0: warp(MAP_PSFCITY17,3,16)
        case 1: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
        case MULTI_B_PRESSED: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
}
}

script Psfplace11_FerryState1_Script {
    multichoicedefault(18,8,PSFPLACE11_FERRY_DESTINATIONS_VER2,2,FALSE)
    call(SlateportCity_Harbor_EventScript_BoardFerry)

    switch (var(VAR_RESULT)){
        case 0: warp(MAP_PSFCITY17,3,16)
        case 1: warp(MAP_PSFCAVE5,15,36)
        case 2: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
        case MULTI_B_PRESSED: goto(SlateportCity_Harbor_EventScript_CancelDestinationSelect)
}
}
text gText_WhereWould {
    format("Where would you like to go?")
}
