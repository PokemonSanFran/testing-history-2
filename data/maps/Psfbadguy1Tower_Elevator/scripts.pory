const PLAYER = OBJ_EVENT_ID_PLAYER

mapscripts Psfbadguy1Tower_Elevator_MapScripts {
    MAP_SCRIPT_ON_TRANSITION {
        goto(Psfbadguy1Tower_Elevator_MapScripts_OnTransition)
    }
    MAP_SCRIPT_ON_FRAME_TABLE [
        VAR_TEMP_0, 0: Psfbadguy1Tower_Elevator_AttendantMissing_Dialogue 
    ]
}

script Psfbadguy1Tower_Elevator_MapScripts_OnTransition {
    if (var(VAR_MAUVILLE_CITY_STATE) > 4){
        goto(Psfbadguy1Tower_Elevator_HideAttendant_Script)
}
}

script Psfbadguy1Tower_Elevator_AttendantMissing_Dialogue {
    setvar(VAR_TEMP_0,1)
        if (var(VAR_MAUVILLE_CITY_STATE) > 4){
            lock
                applymovement(PLAYER,Common_Movement_FaceLeft)
                waitmovement(0)
                setvar(VAR_0x8000, MUGSHOT_HILDA)
                callnative(DrawMugshot)
                msgbox(gText_Psfbadguy1Tower_Elevator_TheAttendantIsGone)
                closemessage
                callnative(ClearMugshot)
                release
                end
} else {
    release
        end
}
}

script Psfbadguy1Tower_Elevator_HideAttendant_Script {
    setflag(FLAG_TEMP_1)
}

script Psfbadguy1Tower_ElevatorAttendant_Script {
    lock
        faceplayer
        setvar(VAR_0x8004,0) //don't know what purpose this serves
        if (flag(FLAG_TEMP_2)){
            call(Psfbadguy1TowerElevator_EventScript_SetFloor)
        }
    copyvar(VAR_0x8005,VAR_DEPT_STORE_FLOOR)

        special(ShowPsfbadguy1TowerElevatorFloorSelect) // TODO Figure out why the floor does not display correctly when you walk from 2F to 1F and then use the elevator
        message(gText_WhichFloorWouldYouLike)
        waitmessage
        setvar(VAR_0x8004,0) //don't know what purpose this serves
        goto(Psfbadguy1TowerElevator_EventScript_ChooseFromX)
        end
}

script Psfbadguy1TowerElevator_EventScript_ChooseFromX  {
    specialvar(VAR_RESULT,GetTowerFloorDefaultFloorChoice)
        switch(var(VAR_RESULT))
        {
            case 0: multichoicedefault(0,0,MULTI_FLOORS,0,FALSE)
            case 1: multichoicedefault(0,0,MULTI_FLOORS,1,FALSE)
            case 2: multichoicedefault(0,0,MULTI_FLOORS,2,FALSE)
            case 3: multichoicedefault(0,0,MULTI_FLOORS,3,FALSE)
        }
    goto(Psfbadguy1TowerElevator_EventScript_ChooseFloor)
        end
}

script Psfbadguy1TowerElevator_EventScript_ChooseFloor{
    switch(var(VAR_RESULT)) {
        case 0: goto(Psfbadguy1TowerElevator_EventScript_10thFloor)
        case 1: goto(Psfbadguy1TowerElevator_EventScript_5thFloor)
        case 2: goto(Psfbadguy1TowerElevator_EventScript_2ndFloor)
        case 3: goto(Psfbadguy1TowerElevator_EventScript_1stFloor)
        case 4: goto(Psfbadguy1TowerElevator_EventScript_ExitFloorSelect)
        case(MULTI_B_PRESSED): goto(Psfbadguy1TowerElevator_EventScript_ExitFloorSelect)
    }
    end
}

script Psfbadguy1TowerElevator_EventScript_1stFloor{
    setvar(VAR_0x8006,PSFBADGUY1TOWER_FLOORNUM_1F)
        setdynamicwarp(MAP_PSFBADGUY1TOWER_1F,255,8,2)
        if (var(VAR_DEPT_STORE_FLOOR) == PSFBADGUY1TOWER_FLOORNUM_1F)    {
            goto(Psfbadguy1TowerElevator_EventScript_ExitFloorSelect)
        }
    call(Psfbadguy1TowerElevator_EventScript_MoveElevator)
        setvar(VAR_DEPT_STORE_FLOOR,PSFBADGUY1TOWER_FLOORNUM_1F)
        goto(Psfbadguy1TowerElevator_EventScript_ExitFloorSelect)
        end
}
