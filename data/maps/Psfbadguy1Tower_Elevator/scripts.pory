script Psfbadguy1TowerElevator_EventScript_ExitFloorSelect{
    special(CloseDeptStoreElevatorWindow)
        release
        end
}

script Psfbadguy1TowerElevator_EventScript_MoveElevator{
    special(CloseDeptStoreElevatorWindow)
        closemessage
        applymovement(VAR_LAST_TALKED,Common_Movement_WalkInPlaceFasterDown)
        waitmovement(0)
        waitse
        special(MoveElevator)
        waitstate
        setflag(FLAG_TEMP_2)
        return
}

script Psfbadguy1TowerElevator_EventScript_SetFloor{
    special(SetPsfbadguy1TowerFloor)
        return
}

text gText_Psfbadguy1Tower_Elevator_TheAttendantIsGone {
    format("The attendant is gone...but I don't think the elevator works without their keycard. Guess I have to take the stairs.")
}

