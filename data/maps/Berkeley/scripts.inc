	map_script MAP_SCRIPT_ON_FRAME_TABLE, Berkeley_MapScripts_MAP_SCRIPT_ON_FRAME_TABLE
	.byte 0

Berkeley_MapScripts_MAP_SCRIPT_ON_TRANSITION:
	call swagbag2_SetUp_Object_Script
