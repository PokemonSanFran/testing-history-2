script Dogpatch_Pokemoncenter_1F_EventScript_Nurse{
	setvar(VAR_0x800B, LOCALID_NURSE)
	call(Common_EventScript_PkmnCenterNurse)
	release
	end
}

script Dogpatch_Pokemoncenter_1F_EventScript_Clerk{
