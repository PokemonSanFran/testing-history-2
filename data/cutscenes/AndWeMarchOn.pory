    playbgm(MUS_ENCOUNTER_ELITE_FOUR,TRUE)
    applymovement(MALVA, AndWeMarchOn_LookAroundCrowd)
        waitmovement(0)
        playse(SE_APPLAUSE)
        applymovement(MALVA, AndWeMarchOn_WalkToFloatCenter)
        waitmovement(0)

        setvar(VAR_0x8000, MUGSHOT_SHAUNTAL)
        callnative(DrawMugshot)
        msgbox(gText_AndWeMarchOn_SanFran)
        callnative(ClearMugshot)
        closemessage

        //TODO implement fireworks on screen

        playse(SE_BANG)
        waitse
        playse(SE_BANG)
        waitse

        setvar(VAR_0x8000, MUGSHOT_SHAUNTAL)
        callnative(DrawMugshot)
        msgbox(gText_AndWeMarchOn_ThankYouForSupporting)
        callnative(ClearMugshot)
        closemessage

        playse(SE_APPLAUSE)
        waitse

        applymovement(MALVA, AndWeMarchOn_PaceBackForth)
        waitmovement(0)
        goto(AndWeMarchOn_InviteOntoStage_Dialogue)
}

