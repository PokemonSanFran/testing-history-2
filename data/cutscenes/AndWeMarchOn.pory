script AndWeMarchOn_ParadeEnd_Script {

        playse(SE_APPLAUSE)
        playse(SE_APPLAUSE)
        waitse
        fadescreen(FADE_TO_BLACK)
        removeobject(MALVA)
        removeobject(8)
        setflag(FLAG_TEMP_3)
        addvar(VAR_ROUTE108_STATE,1)
        special(ReturnCameraToPlayer)
        fadedefaultbgm
        fadescreen(FADE_FROM_BLACK)
        release
        end
}

