        msgbox(gText_AndWeMarchOn_ItsBeenAWildYear)

        playse(SE_APPLAUSE) //PSF TODO: change to booing sound
        waitse

        applymovement(MALVA, AndWeMarchOn_WalkToSouthStage_Movement)
        waitmovement(0)

        setvar(VAR_MUGSHOT, MUGSHOT_SHAUNTAL)
        callnative(DrawMugshot)
        msgbox(gText_AndWeMarchOn_OhItsNotAllBad)
        callnative(ClearMugshot)
        closemessage

