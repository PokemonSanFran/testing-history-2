const PLAYER = OBJ_EVENT_ID_PLAYER
const PKMN1 = 1
const PKMN2 = 2
const PKMN3 = 3
const PKMN4 = 4
const MALVA = 5
const RUPERT = 6
const CAMERA = OBJ_EVENT_ID_CAMERA

script AndWeMarchOn_ObjectVisibility_Script{
    switch (var(VAR_ROUTE108_STATE)){
        case 0: call(AndWeMarchOn_ObjectSetUp_Script)
        case 1: call(AndWeMarchOn_ObjectCleanUp_Script)
    }
    return
}

script AndWeMarchOn_ObjectSetUp_Script {
    setflag(FLAG_TEMP_1)
    setflag(FLAG_TEMP_2)
}

script AndWeMarchOn_ObjectCleanUp_Script {
    setflag(FLAG_TEMP_1)
    setflag(FLAG_TEMP_2)
    setflag(FLAG_TEMP_3)
}

script AndWeMarchOn_MoveCameraToParade_Script {
        setvar(VAR_0x8004, 2)
        setvar(VAR_0x8005, 9)
        special(TeleportCamera)
        special(SpawnCameraObject)
}

