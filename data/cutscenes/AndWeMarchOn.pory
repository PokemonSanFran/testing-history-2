}

script AndWeMarchOn_StartCutsceneBattle_Script {
    setvar(VAR_MUGSHOT, MUGSHOT_SHAUNTAL)
        callnative(DrawMugshot)
        msgbox(gText_AndWeMarchOn_RupertAreYouReady)
        callnative(ClearMugshot)
        msgbox(gText_AndWeMarchOn_Woo)
        msgbox(gText_AndWeMarchOn_Yeah)
        closemessage

        applymovement(MALVA, AndWeMarchOn_WalkToLeftSide_Movement)
        applymovement(RUPERT, AndWeMarchOn_LookAroundCrowd_Movement)
        waitmovement(0)
        applymovement(RUPERT, Common_Movement_FaceLeft)
        waitmovement(0)

        setvar(VAR_MUGSHOT, MUGSHOT_SHAUNTAL)
        callnative(DrawMugshot)
        msgbox(gText_AndWeMarchOn_LetsRock)
        callnative(ClearMugshot)
        closemessage

        msgbox(gText_AndWeMarchOn_AndOurBattle)
        closemessage
