const PSFBADBOSS = 1

script PsfbadbossWalkToPsfchara1_Script {
    lockall
    setvar(VAR_PSFCITY15_STATE,2)
    playse(SE_PIN)
    playbgm(MUS_RG_ENCOUNTER_DEOXYS,TRUE) 
    applymovement(PSFBADBOSS,Common_Movement_ExclamationMark)
    waitmovement(0)
    applymovement(PSFBADBOSS,PsfbadbossWalkToPsfchara1_Movement)
    waitmovement(0)
    goto(PsfbadbossIntro_Dialogue)
}

script PsfbadbossIntro_Dialogue {
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_PsfbadbossWhatAShow_Text1)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_Psfchara1YouWorkAt_Text1)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_PsfbadbossWhereMyManners_Text1)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_Psfchara1ShouldHaveKnown_Text1)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_PsfbadbossDreamBig_Text1)
    callnative(ClearMugshot)
    goto(ShowPsfcompany3Tower_Script)
}

script ShowPsfcompany3Tower_Script {
    fadescreen(FADE_TO_BLACK)
    callnative(DrawMugshot)
    msgbox(gText_PsfbadbossYouShouldComeBy_Text1)
    callnative(ClearMugshot)
    fadescreen(FADE_FROM_BLACK)
    goto (EndMeetPsfbadboss_Dialouge)
}

script EndMeetPsfbadboss_Dialouge {
    callnative(DrawMugshot)
    msgbox(gText_PsfbadbossMeetingWithMayor_Text1)
    callnative(ClearMugshot)
    closemessage
    applymovement(PSFBADBOSS,PsfBadbossWalkToMayor_Movement)
    waitmovement(0)
    removeobject(PSFBADBOSS)
    playbgm(MUS_RG_VERMILLION,TRUE)
    releaseall
    end
}

movement PsfbadbossWalkToPsfchara1_Movement {
    walk_left * 4
    walk_up * 3
}

movement PsfBadbossWalkToMayor_Movement {
    walk_right * 8
}

