const PSFBADBOSS = 1

script WowYoureStrong_WalkToPlayer_Script {
    lockall
    setvar(VAR_PSFCITY15_STATE,2)
    playse(SE_PIN)
    playbgm(MUS_RG_ENCOUNTER_DEOXYS,TRUE) 
    applymovement(PSFBADBOSS,Common_Movement_ExclamationMark)
    waitmovement(0)
    applymovement(PSFBADBOSS,WowYoureStrong_WalkToPlayer_Movement)
    waitmovement(0)
    goto(WowYoureStrong_Intro_Dialogue)
}

script WowYoureStrong_Intro_Dialogue {
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_WhatAShow)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_OhUhThanksALot)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_WhereMyManners)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_ShouldHaveKnown)
    callnative(ClearMugshot)
    setvar(VAR_0x8000, MUGSHOT_GHETSIS)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_DreamBig)
    callnative(ClearMugshot)
    goto(WowYoureStrong_ShowTower_Script) //PSF TODO Show scrolling up view of the tower
}

script WowYoureStrong_ShowTower_Script {
    fadescreen(FADE_TO_BLACK)
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_YouShouldComeBy)
    callnative(ClearMugshot)
    fadescreen(FADE_FROM_BLACK)
    goto (WowYoureStrong_End_Dialouge)
}

script WowYoureStrong_End_Dialouge {
    callnative(DrawMugshot)
    msgbox(gText_WowYoureStrong_MeetingWithMayor)
    callnative(ClearMugshot)
    closemessage
    applymovement(PSFBADBOSS,PsfBadbossWalkToMayor_Movement)
    waitmovement(0)
    removeobject(PSFBADBOSS)
    playbgm(MUS_RG_VERMILLION,TRUE)
    releaseall
    end
}

movement WowYoureStrong_WalkToPlayer_Movement {
    walk_left * 4
    walk_up * 3
}

movement PsfBadbossWalkToMayor_Movement {
    walk_right * 8
}

