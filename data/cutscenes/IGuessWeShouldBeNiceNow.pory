        applymovement(PSFTRANSRIVAL,IGuessWeShouldBeNiceNow_WalkIntoMaze)
        waitmovement(0)
            setobjectxy(PSFTRANSRIVAL,15,19)
            setobjectxyperm(PSFTRANSRIVAL,15,19)

        setvar(VAR_0x8000, MUGSHOT_BIANCA)
