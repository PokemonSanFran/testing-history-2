movement HeresHowThisIsGoingToGo_LeaveLockersA {
    walk_right * 5
    walk_down * 3
    walk_left * 5
    walk_down * 2
    step_end
}
movement HeresHowThisIsGoingToGo_LeaveLockersB {
    walk_right * 6
    walk_down * 4
    walk_left * 5
    walk_down * 2
    step_end
}
movement HeresHowThisIsGoingToGo_GoToBracket {
    walk_down
    walk_left * 7
    walk_up * 2
    step_end
}
