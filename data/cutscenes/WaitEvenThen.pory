movement WaitEvenThen_WalkToSleepingA {
    walk_right * 6
        walk_down * 2
        walk_right * 2
        face_up
        step_end
}

movement WaitEvenThen_WalkToSleepingB {
    walk_right * 6
        walk_down
        walk_right * 3
        face_up
        step_end
}

movement WaitEvenThen_WalkToSleepingC {
    walk_right * 7
        walk_down * 3
        walk_right * 2
        face_up
        step_end
}

movement WaitEvenThen_WalkToSleepingD {
    walk_right * 7
        walk_down * 2
        walk_right * 3
        face_up
        step_end
}

movement WaitEvenThen_WalkToComputer {
    walk_right
        walk_up
        walk_right * 2
        walk_up * 2
        walk_right * 2
        face_up
        step_end
}

movement WaitEvenThen_LeaveLabA {
    walk_down * 2
        walk_left * 14
        step_end
}

movement WaitEvenThen_LeaveLabB {
    walk_left * 6
        walk_up * 3
        walk_left * 4
        step_end
}

movement WaitEvenThen_WalkAwayFromPlayer {
    walk_up
        walk_left * 9
        step_end
}
