const PLAYER = OBJ_EVENT_ID_PLAYER
const PSFNATIVERIVAL = 1
const PSFGOODADMIN = 2
const PSFELITE2 = 3
const PKMNC = 6

script WaitEvenThen_TurnOnMachine_Script {
    setmetatile(32, 2, 0x2D8, TRUE)
        setmetatile(33, 2, 0x2D9, TRUE)
        setmetatile(34, 2, 0x2DA, TRUE)
        setmetatile(35, 2, 0x2DB, TRUE)
        setmetatile(32, 3, 0x2E0, TRUE)
        setmetatile(33, 3, 0x2E1, TRUE)
        setmetatile(34, 3, 0x2E2, TRUE)
        setmetatile(35, 3, 0x2E3, TRUE)
        special(DrawWholeMapView)
}

script WaitEvenThen_BossSetUp_Script {
    clearflag(FLAG_TEMP_1)

        addobject(PSFGOODADMIN)
        addobject(PSFELITE2)
        addobject(PSFNATIVERIVAL)

        setobjectmovementtype(PSFELITE2,MOVEMENT_TYPE_FACE_UP)
        setobjectxyperm(PSFELITE2,39,4)
        setobjectxy(PSFELITE2,39,4)

        setobjectmovementtype(PSFNATIVERIVAL,MOVEMENT_TYPE_FACE_UP)
        setobjectxy(PSFNATIVERIVAL,34,6)
        setobjectxyperm(PSFNATIVERIVAL,34,6)

        setobjectmovementtype(PSFGOODADMIN,MOVEMENT_TYPE_FACE_UP)
        setobjectxy(PSFGOODADMIN,33,7)
        setobjectxyperm(PSFGOODADMIN,33,7)

        setobjectxy(PKMNC,33,5)
        setobjectxyperm(PKMNC,33,5)
}

script WaitEvenThen_ObjectSetUp_Script {
    fadescreen(FADE_TO_BLACK)

        setobjectxy(PLAYER,25,4)
        TeleportCamera(25,4)
        applymovement(PLAYER,Common_Movement_FaceRight)

        clearflag(FLAG_TEMP_1)

        addobject(PSFNATIVERIVAL)
        setobjectxy(PSFNATIVERIVAL,25,5)
        applymovement(PSFNATIVERIVAL,Common_Movement_FaceRight)

        addobject(PSFGOODADMIN)
        setobjectxy(PSFGOODADMIN,24,4)
        applymovement(PSFGOODADMIN,Common_Movement_FaceRight)

        addobject(PSFELITE2)
        setobjectxy(PSFELITE2,24,5)
        applymovement(PSFELITE2,Common_Movement_FaceRight)

        fadescreen(FADE_FROM_BLACK)
}

script WaitEvenThen_PrepareBossEncounter_Dialogue {
    lock
        call(WaitEvenThen_ObjectSetUp_Script)

        applymovement(PLAYER,WaitEvenThen_WalkToSleepingA)
        applymovement(PSFNATIVERIVAL,WaitEvenThen_WalkToSleepingB)
        applymovement(PSFGOODADMIN,WaitEvenThen_WalkToSleepingC)
        applymovement(PSFELITE2,WaitEvenThen_WalkToSleepingD)
        waitmovement(PSFELITE2)

        setvar(VAR_0x8000, MUGSHOT_GRIMSLEY)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_IFoundTheAccess)

        setvar(VAR_0x8000, MUGSHOT_HUGH)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_AndICanHandle)
        callnative(ClearMugshot)
        closemessage

        applymovement(PSFELITE2,WaitEvenThen_WalkToComputer)
        waitmovement(PSFELITE2)

        playse(SE_PC_LOGIN)
        waitse
        delay(10)
        playse(SE_PC_ON)
        waitse

        call(WaitEvenThen_TurnOnMachine_Script)
        applymovement(PKMNC,Common_Movement_WalkDown)

        playmoncry(SPECIES_EXCADRILL,CRY_MODE_ENCOUNTER)
        waitmoncry
        addvar(VAR_DEWFORD_TOWN_STATE,1)

        msgbox(gText_IGuessWeShouldBeNiceNow_Roar,MSGBOX_AUTOCLOSE)

        setobjectxy(PSFNATIVERIVAL,34,6)
        setobjectxyperm(PSFNATIVERIVAL,34,6)
        setobjectxy(PSFGOODADMIN,33,7)
        setobjectxyperm(PSFGOODADMIN,33,7)
        setobjectxyperm(PSFELITE2,39,4)
        setobjectxy(PSFELITE2,39,4)
        setobjectnewmovementtype(PSFELITE2,MOVEMENT_TYPE_FACE_UP)
        call(Common_EventScript_SaveGame)
        goto(WaitEvenThen_BossEncounter_Script)
}

script WaitEvenThen_MovePlayerToBoss {
        getplayerxy(VAR_TEMP_0,VAR_TEMP_1)

    if (var(VAR_TEMP_0) != 33 || (var(VAR_TEMP_1) != 6)){
        fadescreen(FADE_TO_BLACK)
        setobjectxy(PLAYER,33,6)
        TeleportCamera(33,6)
        applymovement(PLAYER,Common_Movement_FaceUp)
        fadescreen(FADE_FROM_BLACK)
    }
        goto(WaitEvenThen_BossEncounter_Script)
}
        
script WaitEvenThen_BossEncounter_Script {
    //PSF TODO Rewrite to have two pokemon OR make it a 1v1 battle instead
    setwildbattle(SPECIES_EXCADRILL,70,ITEM_MUSCLE_BAND,SPECIES_NONE)
        playmoncry(SPECIES_EXCADRILL,CRY_MODE_ENCOUNTER)
        msgbox(gText_IGuessWeShouldBeNiceNow_Roar,MSGBOX_AUTOCLOSE)
        delay(40)
        waitmoncry
        setflag(FLAG_SYS_CTRL_OBJ_DELETE)
        multi_fixed_wild(TRAINER_WALLY_VR_2,TRAINER_BACK_PIC_WALLY)
        clearflag(FLAG_SYS_CTRL_OBJ_DELETE)
        specialvar(VAR_RESULT, GetBattleOutcome)
        switch (var (VAR_RESULT)) {
            case B_OUTCOME_WON:
                goto(WaitEvenThen_ClearBossPokemon_Script)
        }
    release
        end
}

script WaitEvenThen_ClearBossPokemon_Script {
    addvar(VAR_DEWFORD_TOWN_STATE,1)

        lock
        closemessage
        fadescreenswapbuffers(FADE_TO_BLACK)
        removeobject(PKMNC)
        fadescreenswapbuffers(FADE_FROM_BLACK)
        goto(WaitEvenThen_PostBossDialogue)
}

script WaitEvenThen_PostBossDialogue {
    lock

        addvar(VAR_STORYLINE_STATE,1)
        addvar(VAR_NATIVERIVALBETA_STATE,1)

        applymovement(PLAYER,Common_Movement_FaceDown)
        applymovement(PSFNATIVERIVAL,Common_Movement_FaceDown)
        applymovement(PSFELITE2,Common_Movement_FaceDown)

        setvar(VAR_0x8000, MUGSHOT_HUGH)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_DamnAPowerSpot)

        setvar(VAR_0x8000, MUGSHOT_GRIMSLEY)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_AndTheGovernment)

        setvar(VAR_0x8000, MUGSHOT_ARIANA)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_IllHaveSomeOther)
        callnative(ClearMugshot)
        closemessage

        applymovement(PSFELITE2,WaitEvenThen_LeaveLabA)
        applymovement(PSFGOODADMIN,WaitEvenThen_LeaveLabB)
        waitmovement(PSFGOODADMIN)

        applymovement(PSFNATIVERIVAL,Common_Movement_FaceLeft)
        applymovement(PLAYER,Common_Movement_FaceRight)

        setvar(VAR_0x8000, MUGSHOT_HUGH)
        callnative(DrawMugshot)
        msgbox(gText_WaitEvenThen_ComingWithMe,MSGBOX_YESNO)
        callnative(ClearMugshot)
        closemessage

        if (var(VAR_RESULT) == YES){
            warp(MAP_PSFCITY17,255,34,13)
                end
        }else {
            setvar(VAR_0x8000, MUGSHOT_HUGH)
                callnative(DrawMugshot)
                msgbox(gText_WaitEvenThen_MeetUsIn)
                closemessage
                callnative(ClearMugshot)
                applymovement(PSFNATIVERIVAL,WaitEvenThen_WalkAwayFromPlayer)
                waitmovement(PSFNATIVERIVAL)

                removeobject(PSFNATIVERIVAL)
                removeobject(PSFELITE2)
                removeobject(PSFGOODADMIN)
        }
    release
        end
}

