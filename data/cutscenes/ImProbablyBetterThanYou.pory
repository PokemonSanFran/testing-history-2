const PLAYER = OBJ_EVENT_ID_PLAYER
const PSFTRANSRIVAL = 1 //FLAG_TEMP_1
const PSFBADADMIN = 2 //FLAG_TEMP_2


script ImProbablyBetterThanYou_ObjectSetUp {
    setflag(FLAG_TEMP_3)
    setflag(FLAG_TEMP_2)
}

script ImProbablyBetterThanYou_MovePlayerInside_Script {
    warpdoor(MAP_PSFCITY8_COMPOUND_1F,255,5,9)
        waitstate
        end
}

script ImProbablyBetterThanYou_StandingOutside_Dialogue {
    lockall
        addvar(VAR_LITTLEROOT_INTRO_STATE,1)
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_DeepBreath)
        callnative(ClearMugshot)
        closemessage
        call(ImProbablyBetterThanYou_MovePlayerInside_Script)
        applymovement(PLAYER,Common_Movement_WalkUp)
        waitmovement(0)
}

script ImProbablyBetterThanYou_BiancaIntro_Dialogue {
    addvar(VAR_LITTLEROOT_INTRO_STATE,1)
        lockall
        playbgm(MUS_ENCOUNTER_BRENDAN,TRUE)
        playse(SE_PIN)
        applymovement(PSFTRANSRIVAL,Common_Movement_ExclamationMark)
        waitmovement(0)
        applymovement(PSFTRANSRIVAL,ImProbablyBetterThanYou_WalkToPlayer)
        waitmovement(0)
        setvar(VAR_0x8000, MUGSHOT_BIANCA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_GreatToMeet)
        closemessage
        callnative(ClearMugshot)
        goto (ImProbablyBetterThanYou_KindaShabby_Dialogue) 
        end
}

script ImProbablyBetterThanYou_KindaShabby_Dialogue {
        applymovement(PSFTRANSRIVAL,ImProbablyBetterThanYou_LookAround)
        waitmovement(0)
        msgbox(gText_ImProbablyBetterThanYou_KindaShabbyHuh)
        closemessage
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_OhYeahUh)
        msgbox(gText_ImProbablyBetterThanYou_ThisHouseIsFriggin)
        setvar(VAR_0x8000, MUGSHOT_BIANCA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_MyFlightWasEarlierToday)
        goto(ImProbablyBetterThanYou_FoodAndWhereYouFrom_Dialogue) 
        end
}

script ImProbablyBetterThanYou_FoodAndWhereYouFrom_Dialogue {
        msgbox(gText_ImProbablyBetterThanYou_IOrderedSomeFoodToo)
        msgbox(gText_ImProbablyBetterThanYou_WhereAreYouFrom)
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_AgateVillageOrre)
        setvar(VAR_0x8000, MUGSHOT_BIANCA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_UndellaTownUnova)
        goto (ImProbablyBetterThanYou_TookTheLeftBedroom_Dialogue)
        end
}

script ImProbablyBetterThanYou_TookTheLeftBedroom_Dialogue {
        msgbox(gText_ImProbablyBetterThanYou_IKnowOurOrientation)
        applymovement(PSFTRANSRIVAL,ImProbablyBetterThanYou_GestureUpstairs)
        waitmovement(0)
        msgbox(gText_ImProbablyBetterThanYou_ButBothRooms)
        callnative(ClearMugshot)
        closemessage
        applymovement(PSFTRANSRIVAL,ImProbablyBetterThanYou_WalkToCouch)
        waitmovement(0)
        fadedefaultbgm
        releaseall
        end
}

script ImProbablyBetterThanYou_PreventPlayerLeaving_Script {
    lockall
        setvar(VAR_0x8000, MUGSHOT_HILDA)
        callnative(DrawMugshot)
        msgbox(gText_ImProbablyBetterThanYou_IShouldCheckOut)
        callnative(ClearMugshot)
        closemessage
        applymovement(PLAYER,Common_Movement_WalkUp)
        waitmovement(0)
        releaseall
        end
}

script ImProbablyBetterThanYou_Annoyed_Dialogue {
    setvar(VAR_0x8000, MUGSHOT_BIANCA)
    callnative(DrawMugshot)

    switch (var(VAR_TEMP_0)) {
        case 1: 
            msgbox(gText_ImProbablyBetterThanYou_OhManAreYouTrying,MSGBOX_NPC)
            addvar(VAR_TEMP_0,1)
        case 2:
            msgbox(gText_ImProbablyBetterThanYou_NomNomNom)
        default:
            msgbox(gText_ImProbablyBetterThanYou_GoCheckOutYourRoom,MSGBOX_NPC)
            setvar(VAR_TEMP_0,1)
    }
    callnative(ClearMugshot)
    closemessage
        applymovement(PSFTRANSRIVAL,ImProbablyBetterThanYou_GoBackToFood)
            waitmovement(0)
}

