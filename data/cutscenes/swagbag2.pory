const PLAYER = OBJ_EVENT_ID_PLAYER
const OAK = 1

script swagbag2_SetUp_Object_Script {
    setflag(FLAG_TEMP_1)
    return
}

script swagbag2_OakWalkOutGym_Script {
    opendoor(10, 8)
    waitdooranim
    clearflag(FLAG_TEMP_1)
    addobject(OAK)
    applymovement(OAK, Common_Movement_WalkDown)
    applymovement(PLAYER, swagbag2_GetOutOfWay)
    waitmovement(0)
    closedoor(10, 8)
    waitdooranim
    goto(swagbag2_Intro_Dialogue)
}

script swagbag2_Intro_Dialogue {
    playbgm(MUS_RG_FOLLOW_ME, FALSE)
    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_ItWasAPleasure)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_ItsALot)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_SoundsLikeYouveRun)

    applymovement(OAK, swagbag2_LookAwayAndBack)
    waitmovement(0)

    if (flag(FLAG_RECEIVED_LAVARIDGE_EGG)) {
        goto(swagbag2_DiscussCosts_Dialogue)
    } else {
        goto(swagbag2_BringToCenter_Dialogue)
    }
}

script swagbag2_DiscussCosts_Dialogue {

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_IAssumeYouveAlready)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_TheyWereVeryHelpful)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_TheBreedingCenterStaff)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_TheBreedingCenterOffers)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_ThatsTooBad)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_HopefullyTheyllHaveIt)
    callnative(ClearMugshot)

    goto(swagbag2_Scene_End_Script)
}

script swagbag2_BringToCenter_Dialogue {

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_HaveYouSeenThe)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_NoShouldI)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_IveGotAFewMinutes)
    callnative(ClearMugshot)
    closemessage

    applymovement(OAK, swagbag2_WalkToCenter)
    applymovement(PLAYER, swagbag2_PlayerWalkToCenter)
    waitmovement(0)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_DontLetTheirDemeanor)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_WowThatsAwesome)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_YouShouldReallyTalk)

    setvar(VAR_MUGSHOT, MUGSHOT_HILDA)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_IWillThanks)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_HappyToHelp)

    applymovement(OAK, swagbag2_LookAwayAndBack)
    waitmovement(0)

    setvar(VAR_MUGSHOT, MUGSHOT_LANCE)
    callnative(DrawMugshot)
    msgbox(gText_swagbag2_NowIveGottaRun)
    callnative(ClearMugshot)

    goto(swagbag2_Scene_End_Script)
}

script swagbag2_Scene_End_Script {
    setvar(VAR_BERKELEY_STATE, SWAGBAG_2_COMPLETE)
    closemessage
    applymovement(PLAYER, swagbag2_LetOakLeave)
    applymovement(OAK, swagbag2_LeaveCity)
    waitmovement(0)
    removeobject(OAK)
    fadedefaultbgm
    release
    end
}

