        closemessage

        //TODO PSF Mockup a SMS on the screen
        msgbox(gText_OffYouGo_PleaseMeetMeOn)

        msgbox(gText_OffYouGo_IllBeRightOver)

        setvar(VAR_0x8000, MUGSHOT_HILDA)
