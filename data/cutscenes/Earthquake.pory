        applymovement(CAMERA,Earthquake_PanCameraDown)
        waitmovement(0)

        fadescreen(FADE_TO_BLACK)
        TeleportCamera(33,26)
        special(SpawnCameraObject)
        fadescreen(FADE_FROM_BLACK)

        applymovement(CAMERA,Earthquake_PanCameraUp)
